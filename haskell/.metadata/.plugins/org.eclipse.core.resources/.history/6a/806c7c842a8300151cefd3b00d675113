module Robot (robotName, mkRobot, resetName) where

import System.Random (newStdGen, randomRs)

newtype Robot = Robot { name :: String }

robotName :: Robot -> IO String
robotName robot = undefined

mkRobot :: IO Robot
mkRobot = do
  gen <- newStdGen
  let lettersGen = randomRs ('A', 'Z') gen
      digitsGen = randomRs ('0', '9') gen
      letters = take 2 lettersGen
      digits = take 3 digitsGen
      name = letters ++ digits
      robot = Robot name
  return robot

resetName :: Robot -> IO ()
resetName = undefined
