module School (School, add, empty, sorted, grade) where

import Data.Map (Map)
import qualified Data.Map as Map
import Data.List (sort)
import Data.Maybe (fromMaybe)

type Grade = Int
type Name = String
type School = Map Grade [Name]

add :: Grade -> Name -> School -> School
add grad name =
  Map.insertWith (++) grad [name]

empty :: School
empty = Map.empty

sorted :: School -> [(Grade, [Name])]
sorted school =
  Map.toList withSortedValues
  where
    withSortedValues = Map.map sort school

grade :: Grade -> School -> [Name]
grade grad school =
  fromMaybe [] (Map.lookup grad school)
